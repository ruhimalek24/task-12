<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<style>
    th {
        font-size: 22px;
    }

    td {
        font-size: 16px;
        font-family: Arial, Helvetica, sans-serif;
        color: rgb(4, 60, 105);
    }
</style>

<body>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Body</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach(post=> { %>
                <tr>
                    <td>
                        <%= post.id %>
                    </td>
                    <td>
                        <%= post.title %>
                    </td>
                    <td>
                        <%= post.body %>
                    </td>
                    <td>
                        <form action="/details/<%= post.id %>" method="GET">
                            <button type="submit">Details</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>